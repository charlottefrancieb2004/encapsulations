class Person:
    def __init__(self, name):
        self.__name = name
    
    @property
    def name(self):
        return self.__name
    
    @name.setter
    def name(self, name):
        self.__name = name

p = Person("Charlotte")
print(p.name) # this will print John
p.name = "balot"
print(p.name) # this will print Mike
